{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "#app": ["./.nuxt/app"],
      "#components/*": ["./.nuxt/components/*"],
      "#layouts/*": ["./.nuxt/layouts/*"],
      "#pages/*": ["./.nuxt/pages/*"],
      "#imports": ["./.nuxt/imports"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}

